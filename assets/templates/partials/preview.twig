<article class="prose lg:prose-lg">
	{% if post.thumbnail.src %}
		<a href="{{ post.link }}"><img src="{{ post.thumbnail.src('large') }}" alt="{{ post.thumbnail.alt }}" /></a>
	{% endif %}

	<h2 class="my-3">
		<a class="" href="{{ post.link }}">{{ post.title }}</a>
	</h2>

	<p class="">
		{{ post.excerpt }}
	</p>
</article>
